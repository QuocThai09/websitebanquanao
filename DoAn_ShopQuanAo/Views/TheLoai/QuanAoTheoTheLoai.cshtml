@using DoAn_ShopQuanAo.Models;
@{
    ViewBag.Title = "QuanAoTheoTheLoai";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html5>
    <head>
        <link href="~/Styles/Styles.css" rel="stylesheet" />
    </head>
    <body>
        <div class="row" style="background-color:darkgrey;position:relative;left:50px;width:1200px;">
            <div class="col">
                <a href="@Url.Action("test","Home")"><i class="fa fa-home" style="font-size: 25px; color: black"></i></a>
            </div>
        </div>
        <div class="row">
            @{
                foreach (var item in Model)
                {
                    <div class="col-lg-3" style="position:relative; top:70px">
                        <div class="QuanAo">
                            <a href="@Url.Action("ChiTietHH","HangHoa", new {@maHH = item.MaHH})"><img src="@Url.Content("/Image/" + item.Anh)" width="90%" height="100%" alt="Image" /></a>
                        </div>
                    </div>
                }
            }
        </div>
    </body>
</html5>


