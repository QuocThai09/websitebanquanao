@using DoAn_ShopQuanAo.Models;
@{
    ViewBag.Title = "HangHoaAoSoMi";
}

@model List<HangHoa>
<html5>
    <head>
        <link href="~/Styles/Styles.css" rel="stylesheet" />
    </head>
    <body>
        <div class="row">
            @{
                foreach (var item in Model)
                {
                    <div class="col-lg-3">
                        <div class="QuanAo">
                            <a href="@Url.Action("ChiTietHH", new {@maHH = item.MaHH})"><img src="@Url.Content("/Image/" + item.Anh)" width="90%" height="100%" alt="Image" /></a>
                        </div>
                    </div>
                }
            }
        </div>
    </body>
</html5>


