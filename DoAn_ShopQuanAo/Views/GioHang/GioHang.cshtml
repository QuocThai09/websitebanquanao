@using DoAn_ShopQuanAo.Models;
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model List<GioHang>
<link href="~/Styles/GioHang.css" rel="stylesheet" />
<div class="card border-dark">
        <table class="border-dark mx-3 mb-3 mt-3">
            <div class="row" style="background-color:darkgrey;position:relative;left:50px;width:1200px;">
                <div class="col">
                    <a href="@Url.Action("test","Home")"><i class="fa fa-home" style="font-size: 25px; color: black"></i></a>
                    Thông tin giỏ hàng của tôi
                </div>
            </div>
            <h2 style="position:relative; left:50px;margin-top:10px;font-size:20px">
                Chi tiết đơn hàng
                <a href="@Url.Action("XoaAllGioHang")" style="text-align:right;position:relative;right:-900px; text-decoration:none;color:red">Delete All</a>
            </h2>

            @foreach (var item in Model)
            {

                <tr>
                    <td width="20%"><a href="@Url.Action("ChiTietHH","HangHoa", new {@maHH = item.iMaHH})"><img src="~/Image/@item.sAnh" width="50%" /></a></td>
                    <td width="12%" style="position:relative;left:-50px">@item.sTenHH</td>
                    <td width="12%"><input aria-label="quantity" class="input-qty" max="1000" min="1" name="txtSoLuong" type="number" value="@item.iSoLuong" style="text-align:center;width:70px"></td>
                    <td width="12%"><a href="@Url.Action("CapNhatGioHang", new {@MaHH = item.iMaHH})"> <input type="button" name="update" id="update" value="UPDATE" class="btn_dathang" style="width:100px;position:relative;top:-10px;left:-40px" /></a></td>
                    <td width="12%">@string.Format("{0:0.000}", @item.iDonGia) đ</td>
                    <td width="12%">@string.Format("{0:0,0.000}", @item.dThanhTien) đ</td>
                    <td width="12%"><a href="@Url.Action("XoaGioHang",new {@MaSP = item.iMaHH} )"><i class="fa fa-trash" aria-hidden="true" style="color: red"></i></a></td>
                </tr>

            }

            <tr style="text-align:right;position:relative;font-weight:bold">
                <td colspan="4">Tổng: @string.Format("{0:0,0.000}", ViewBag.TongThanhTien) đ</td>
            </tr>
        </table>
        <hr style="width:1000px;left:150px;position:relative" />
        <div class="giohang" style="position: relative; left: 50px; margin-top: 10px;">
            <div>
                <h2 style="font-size:20px;text-align:center">
                    Người mua/nhận hàng
                </h2>
                <a>Tên</a>
                <h6 style="margin-top:10px">
                    <input type="text" name="TenNguoiNhan" id="Ten" placeholder="Tên người nhận" style="width:500px;height:40px">
                </h6>
                <a>
                    Điện thoại liên lạc
                </a>
                <h6 style="margin-top:10px">
                    <input type="text" name="SoDienThoai" id="SDT" placeholder="Số điện thoại" style="width:500px;height:40px">
                </h6>
                <form action="/action_page.php">
                    <input type="radio" id="html" name="fav_language" value="HTML">
                    <label for="html">Nhận hàng tại nhà/công ty/bưu điện</label><br>
                    <input type="radio" id="css" name="fav_language" value="CSS">
                    <label for="css">Nhận hàng tại cửa hàng YaMe gần nhất</label><br>
                </form>
                <h6 style="margin-top:10px">
                    <input type="text" class="form-text" name="DiaChi" id="DiaChi" placeholder="Địa chỉ nhận hàng" style="width:500px;height:40px">
                </h6>
                <div class="form-floating">
                    <textarea class="form-control" placeholder="Leave a comment here" id="floatingTextarea2" style="height: 100px;width:500px"></textarea>
                    <label for="floatingTextarea2">Ghi chú</label>
                </div>
                <div>
                    <input type="button" name="DatHang" id="DatHang" value="ĐẶT HÀNG" class="btn_dathang" />
                </div>
                <div>
                    <a href="@Url.Action("test","Home")">
                        <input type="button" name="DatHang" id="MuaHang" value="CẦN SẢN PHẨM KHÁC, TIẾP TỤC MUA HÀNG" class="btn_muatiep" />
                    </a>
                </div>

            </div>
        </div>
</div>

